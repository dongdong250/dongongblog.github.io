// Footer styles

.footer
  padding: 2rem 0
  text-align: center
  color: var(--footer-text-color)
  border-top: 1px solid var(--border-color, #dee2e6)
  margin-top: 2rem
  transition: transition-fast

  html.dark &
    --border-color: #3a3a3a

  p
    margin: 0.5rem 0
    font-size: 0.9rem

  a
    font-weight: bold
