// Header and navigation styles

.header
  display: flex
  justify-content: space-between
  align-items: center
  padding: 1.5rem 0
  background-color: var(--header-bg)
  border-bottom: 1px solid var(--border-color, #dee2e6)
  transition: transition-fast

  html.dark &
    --border-color: #3a3a3a

.logo-container
  display: flex
  align-items: center

.logo-link
  display: flex
  align-items: center
  &:hover
    text-decoration: none

.logo-avatar
  width: 40px
  height: 40px
  border-radius: 50%
  margin-right: 10px
  transition: transform 0.3s ease
  &:hover
    transform: rotate(360deg)

.site-title
  font-size: 1.5rem
  font-weight: bold
  color: var(--text-color)

.nav-menu
  display: flex
  gap: 20px

.nav-link
  font-size: 1.1rem
  font-weight: 500
  padding-bottom: 5px
  border-bottom: 2px solid transparent
  &:hover
    border-bottom-color: var(--link-color)
    text-decoration: none

@media (max-width: 768px)
  .header
    flex-direction: column
    gap: 1rem
  .nav-menu
    gap: 15px
