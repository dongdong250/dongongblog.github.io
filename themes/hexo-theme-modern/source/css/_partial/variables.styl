// Variables for colors, fonts, etc.

// Font
font-family-serif = "Noto Serif SC Medium", serif
font-family-sans = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

// Colors - Light Mode (Default)
:root
  --bg-color: #ffffff
  --text-color: #333333
  --link-color: #007bff
  --link-hover-color: #0056b3
  --header-bg: #f8f9fa
  --footer-text-color: #6c757d
  --code-bg: #f1f1f1

// Colors - Dark Mode
html.dark
  --bg-color: #1a1a1a
  --text-color: #e0e0e0
  --link-color: #66b3ff
  --link-hover-color: #a3d1ff
  --header-bg: #252525
  --footer-text-color: #a0a0a0
  --code-bg: #2c2c2c

// Transitions
transition-fast = all 0.2s ease-in-out
